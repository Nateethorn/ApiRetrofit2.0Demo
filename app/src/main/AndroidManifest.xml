<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.toshiba.youtubedemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".YoutubeApiRecycleViewActivity"
            android:label="@string/RecycleView" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/menu" />
        <activity
            android:name=".YoutubeApiCardViewActivity"
            android:label="@string/CardView" />
        <activity
            android:name=".YoutubeApiRecycleViewRetrofitActivity"
            android:label="@string/recycleview_retrofit" />
        <activity
            android:name=".YoutubeApiCardViewRetrofitActivity"
            android:label="@string/cardview_retrofit" />
        <activity android:name=".YoutubeApiRecycleViewVolleyActivity" />
        <activity android:name=".TreeHouseApiStaggeredGridActivity" />
        <activity android:name=".YoutubeApiCardViewVolleyActivity"></activity>
    </application>

</manifest>